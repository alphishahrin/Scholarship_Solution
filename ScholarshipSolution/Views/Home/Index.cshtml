<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

            <a href="#hero" class="logo d-flex align-items-center">
                <img src="~/Content/img/logo.png" alt="">
                <span style="color:#ff758f;">Scholarship Solution</span>
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto" href="#hero">Home</a></li>
                    @*<li><a class="nav-link scrollto" href="#">University</a></li>
                        <li><a class="nav-link scrollto" href="#">Scholarship</a></li>*@
                    <li><a class="nav-link scrollto" href="~/Home/Index/#contact">Contact</a></li>
                    <li><a class="nav-link scrollto" href="~/Home/Index/#team">About Us</a></li>
                    <li><a class="nav-link scrollto " style="margin-left:35px; " href="~/Students/Login/">Log in</a></li>
                    <li><a class="getstarted scrollto" href="~/Students/SignUp/">Sign Up</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header>
    <!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="hero d-flex align-items-center">

        <div class="container">
            <div class="row">
                <div class="col-lg-6 d-flex flex-column justify-content-center">
                    <h1 data-aos="fade-up" style="color:black; font-family:'Segoe UI'; font-style:normal; font-weight:400; ">Scholarships around the world in a single place.</h1>
                    <h2 data-aos="fade-up" style="color:black; font-family:'Segoe UI'; font-style:normal; font-weight:300; font-size:30px; " data-aos-delay="400">Gather Scholarships from different Universities of the world where you can directly contact the professors!</h2>
                    <div data-aos="fade-up" data-aos-delay="600">
                        <div class="text-center text-lg-start">
                            <a href="#about" class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center">
                                <span>Get Started</span>
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 hero-img" data-aos="zoom-out" data-aos-delay="200">
                    <img src="~/Content/img/hero-img.png" class="img-fluid" alt="">
                </div>
            </div>
        </div>

    </section>
    <!-- End Hero -->
    <!-- ======= Professor Signup Section ======= -->
    <section id="hero" class="hero d-flex align-items-center">

        <div class="container">
            <div class="row">
                <div class="col-lg-6 hero-img" data-aos="zoom-out" data-aos-delay="200">
                    <img src="~/Content/img/about.png" class="img-fluid" alt="">
                </div>
                <div class="col-lg-6 d-flex flex-column justify-content-center">
                    <h1 data-aos="fade-up" style="color:black; font-family:'Segoe UI'; font-style:normal; font-weight:300; ">Have Fund for Scholarship?</h1>
                    <h2 data-aos="fade-up" style="color:black; font-family:'Segoe UI'; font-style:normal; font-weight:200; font-size:30px; " data-aos-delay="400">Sign up to find students who fulfill your requirements. </h2>
                    <p style="color:black; font-family:'Segoe UI'; font-style:normal; font-weight:100; font-size:18px; ">
                        You can explore new students, search their interested field and we will provide you students who has same interest as yours.
                    </p>
                    <div data-aos="fade-up" data-aos-delay="600">
                        <div class="text-center text-lg-start">
                            <a href="~/Professors/Create/" class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center">
                                <span>Signup</span>
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </section>
    <!-- End Professor Section -->
    <!-- ======= Top University Section ======= -->
    <section id="values" class="values">

        <div class="container" data-aos="fade-up">

            <header class="section-header">
                <h2>Top Universities</h2>
                <p>We present you the high ranked unoveristies from this site.</p>
            </header>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4">
                        <div class="box" data-aos="fade-up" data-aos-delay="200">
                            <img src="@Url.Content(item.UniPicture)" class="img-fluid" width="300" height="300" alt="">
                            <h3>@Html.DisplayFor(modelItem => item.UniName)</h3>
                            <p>@Html.DisplayFor(modelItem => item.City), @Html.DisplayFor(modelItem => item.Country)</p>
                            <span>@Html.DisplayFor(modelItem => item.UniRating)</span>
                        </div>
                        <div class="wrap">

                        </div>
                    </div>

                }

            </div>
        </div>
    </section>
    <!-- End Top University Section -->
    <!-- ======= Counts Section ======= -->
    <section id="counts" class="counts">
        <div class="container" data-aos="fade-up">

            <div class="row gy-4">

                <div class="col-lg-3 col-md-6">
                    <div class="count-box">
                        <i class="bi bi-people"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="@ViewBag.stu" data-purecounter-duration="0.25" class="purecounter"></span>
                            <p>Registered Students</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="count-box">
                        <i class="bi bi-person" style="color: #ee6c20;"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="@ViewBag.prof" data-purecounter-duration="0.25" class="purecounter"></span>
                            <p>Professors</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="count-box">
                        <i class="bi bi-union" style="color: #15be56;"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="@ViewBag.uni" data-purecounter-duration="0.25" class="purecounter"></span>
                            <p>Universities</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="count-box">
                        <i class="bi bi-people" style="color: #bb0852;"></i>
                        <div>
                            <span data-purecounter-start="0" data-purecounter-end="@ViewBag.sch" data-purecounter-duration="0.25" class="purecounter"></span>
                            <p>Scholarships</p>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section>
    <!-- End Counts Section -->
   
